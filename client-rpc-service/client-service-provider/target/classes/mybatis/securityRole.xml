<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innovation.emall.system.provider.mapper.SecurityRoleMapper">
  <resultMap id="BaseResultMap" type="com.innovation.emall.system.provider.entity.SecurityRole">
    <!--
      WARNING - @mbg.generated
    -->
    <result column="name" jdbcType="VARCHAR" property="name" />
     <result column="creator_id" jdbcType="VARCHAR" property="creatorId" />
    <result column="create_time"  property="createTime" />
    <result column="delete_flag"  property="deleteFlag" />
  </resultMap>

  <insert id="insertSecurityRole" parameterType="com.innovation.emall.system.provider.entity.SecurityRole" useGeneratedKeys="true" keyProperty="id">
        insert into tb_security_role(name,creator_id,create_time,delete_flag) values
        (#{name},#{creatorId},#{createTime},#{deleteFlag})
  </insert>

  <select id="getById" resultType="com.innovation.emall.system.provider.entity.SecurityRole">
        select * from tb_security_role where id = #{id} and delete_flag = 0
  </select>

  <update id="updateSecurityRole" parameterType="com.innovation.emall.system.provider.entity.SecurityRole">
        update tb_security_role set name=#{name},creator_id=#{creatorId},create_time=#{createTime},delete_flag=#{deleteFlag}
         where id = #{id}
  </update>

    <update id="updateDeleteStatus" parameterType="com.innovation.emall.system.provider.entity.SecurityRole">
        update tb_security_role set delete_flag = #{deleteFlag}
         where id = #{id}
  </update>

    <select id="searchList" resultType="com.innovation.emall.system.provider.entity.SecurityRole">
        select * from tb_security_role
        order by create_time desc
    </select>
</mapper>